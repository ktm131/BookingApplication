@model BookingApplication.Models.HotelPhoto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>HotelPhoto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img class="img-fluid" src="@Model.Photo" alt="@Model.Title" title="@Model.Title"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hotel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hotel.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-route-id="@Model.HotelId" class="btn btn-sm btn-info">Back to List</a>
</div>
