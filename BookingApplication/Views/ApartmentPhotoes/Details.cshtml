@model BookingApplication.Models.ApartmentPhoto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ApartmentPhoto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img class="img-fluid" src="@Model.Photo" alt="@Model.Title" title="@Model.Title" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apartment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apartment.Name)
        </dd>
    </dl>
</div>
<div>
    <div class="btn-group" role="group">
        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
        <a asp-action="Index" asp-route-id="@Model.ApartmentId" asp-route-id="@Model.Id" class="btn btn-sm btn-info">Back to List</a>
    </div>
</div>
