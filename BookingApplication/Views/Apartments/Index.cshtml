@model IEnumerable<BookingApplication.Models.Apartment>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Apartments</h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewData["hid"]">Create New</a>
</p>
<table class="table rounded bg-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balcony)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrivateBathroom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kitchen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NightPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApartmentPhotos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.People)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Beds)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balcony)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrivateBathroom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kitchen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NightPrice)
                </td>
                <td>
                    @if (item.ApartmentPhotos.Any())
                    {
                        <div id="photosCarousel_@item.Id" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                @foreach (var p in item.ApartmentPhotos)
                                {
                                    <div class="carousel-item @(p == item.ApartmentPhotos.First() ? "active" : string.Empty)">
                                        <img class="d-block w-100" src="@p.Photo" alt="@p.Title" title="@p.Title">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#photosCarousel_@item.Id" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#photosCarousel_@item.Id" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    }
                    <a asp-controller="ApartmentPhotoes" asp-action="Index" asp-route-id="@item.Id">Edit photos</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hotel.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
